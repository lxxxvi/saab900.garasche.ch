.flex.justify-between
  = render "admin/uploads/statistics", upload_statistics: @upload_statistics
  = raw @pagy.series_nav if @pagy.pages > 1

.flex.flex-col.gap-y-4
  - if @records.any?
    - @records.each do |record|
      = render "admin/uploads/show", record:
