= link_to 'Show approved', admin_uploads_path

%h2 For review

- if records.any?
  %table
    %thead
      %tr
        %th{ style: 'width: 50%;' } File
        %th{ style: 'width: 25%;' }
        %th{ style: 'width: 25%;' }
    %tbody
      - records.each do |record|
        %tr
          %td
            = render 'uploads/file', record: record
          %td
            = render 'approval_form', record: record
          %td
            = render 'deletion_form', record: record
- else
  none
