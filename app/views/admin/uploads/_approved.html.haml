= link_to 'Show for review', admin_uploads_path(display: 'review')

%h2 Approved

- if records.any?
  %table
    %thead
      %tr
        %th{ style: 'width: 50%;' } File
        %th{ style: 'width: 25%;' } Approved at
        %th{ style: 'width: 25%;' }
    %tbody
      - records.each do |record|
        %tr
          %td
            = render 'uploads/file', record: record
          %td
            = record.approved_at
          %td
            = render 'deletion_form', record: record

- else
  none
