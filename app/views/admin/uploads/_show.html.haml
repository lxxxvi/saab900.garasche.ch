.upload.grid.grid-cols-12.gap-4.bg-white.p-4
  .col-span-3.right.flex.flex-col.gap-y-4
    .flex.justify-end
      = render "admin/uploads/published_badge", published: record.published?
    .flex.justify-end
      %ul.flex.flex-col.gap-y-2.text-sm
        %li.flex.justify-end
          = render "admin/uploads/publish_button", record:

        %li.flex.justify-end
          = link_to t('general.edit'), edit_admin_upload_path(record), class: "underlined-link hover:opacity-70"

        %li.flex.justify-end
          = button_to t('general.delete'), admin_upload_path(record), method: :delete, "data-turbo-confirm": t("general.are_you_sure_questionmark"), class: "underlined-link text-gray-500 opacity-70 hover:opacity-100 hover:text-red-600"

  .col-span-6.left.flex.justify-center
    = render 'uploads/file', record: record, image_size: :thumbnail

  .col-span-3.flex.flex-col.gap-y-2
    %dl
      %dt.text-gray-400.text-xs.uppercase
        = Upload.human_attribute_name(:title)
      %dd
        = record.title.presence || "-"
    %dl
      %dt.text-gray-400.text-xs.uppercase
        = Upload.human_attribute_name(:comment)
      %dd
        = record.comment.presence || "-"

    - if record.published?
      %dl
        %dt.text-gray-400.text-xs.uppercase
          = Upload.human_attribute_name(:published_at)
        %dd
          = record.published_at&.to_fs(:db) || "-"
